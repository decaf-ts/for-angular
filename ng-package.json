{
  "$schema": "./node_modules/ng-packagr/ng-package.schema.json",
  "dest": "./dist/for-angular",
  "lib": {
    "entryFile": "src/public-api.ts",
    "styleIncludePaths": ["./src/assets"]
  },
  "inlineStyleLanguage": "scss",
  "assets": [
    {
      "glob": "**/*",
      "input": "src/assets",
      "output": "assets"
    }
  ]
}
