{
  "name": "@decaf-ts/for-angular",
  "version": "0.0.4",
  "scripts": {
    "ng": "ng",
    "decaf": "npx decaf angular generate",
    "do-install": "npm run decaf schematics decaf && TOKEN=$(cat .token) npm install",
    "flash-forward": "npx npm-check-updates -u && npm run do-install",
    "update-dependencies": "rimraf node_modules/@decaf-ts package-lock.json && npm run do-install",
    "reset": "rm -rf * && git checkout . && git pull && npm run do-install",
    "build:prod": "ng build for-angular && ng  build  for-angular-app",
    "build": "ng build for-angular --configuration development && ng build for-angular-app --configuration development && npm run build:cli",
    "build:new": "rimraf ./.angular && npm run build",
    "build:cli": "tsc --project tsconfig.cli.json --outDir dist/for-angular/cli",
    "start": "ng serve for-angular-app",
    "server": "npm run start",
    "server:pwa": "lite-server",
    "watch": "ng build for-angular --watch --configuration development",
    "test": "npm run test:all",
    "test:all": "ng test --no-watch --browsers=ChromeHeadlessCI",
    "test:components": "ng test --include='./src/lib/components/**/*.spec.ts' --no-watch --browsers=ChromeHeadlessCI",
    "test:services": "ng test --include='./src/lib/services/*.service.spec.ts' --no-watch --browsers=ChromeHeadlessCI",
    "lint": "ng lint for-angular",
    "lint-fix": "eslint --fix .",
    "test:circular": "dpdm -T --no-warning --no-tree ./src/index.ts",
    "prepare-release": "npm run build:prod",
    "release": "./bin/tag-release.sh",
    "clean-publish": "npx clean-publish",
    "coverage": "npm run test && cd workdocs && jest-coverage-badges",
    "drawings": "for FILE in workdocs/drawings/*.drawio; do echo \"converting $FILE to image...\" && docker run --rm -v $(pwd):/data rlespinasse/drawio-export --format png $FILE; done && cp -rf workdocs/drawings/export/* workdocs/resources/",
    "uml": "cd workdocs/uml && for FILE in ./*.puml; do docker run --rm -v $(pwd):/work -w /work miy4/plantuml -DPLANTUML_LIMIT_SIZE=8192 -tpng $FILE; done && cd ../.. && cp -fr workdocs/uml/*.png workdocs/resources/",
    "docs": "npx rimraf ./docs && mkdir docs && npm run do-install -- better-docs taffydb && gulp docs; npm remove better-docs taffydb"
  },
  "files": [
    "dist"
  ],
  "author": "Tiago Venceslau",
  "license": "LGPL-3.0-or-later",
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.12",
    "@angular-devkit/core": "^19.2.8",
    "@angular-devkit/schematics": "^18.2.18",
    "@angular/cli": "^18.2.12",
    "@angular/compiler-cli": "^18.2.13",
    "@faker-js/faker": "^9.7.0",
    "@schematics/angular": "^19.2.8",
    "@types/jasmine": "~5.1.0",
    "angular-eslint": "18.4.0",
    "commander": "^13.1.0",
    "dpdm": "^3.14.0",
    "eslint": "^9.13.0",
    "jasmine-core": "~5.2.0",
    "jsdoc": "^4.0.3",
    "jsdoc-mermaid": "^1.0.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lite-server": "^2.6.1",
    "markdown-include": "^0.4.3",
    "ng-packagr": "^18.2.1",
    "npm-check-updates": "^17.1.4",
    "rimraf": "^6.0.1",
    "tslib": "^2.3.0",
    "typescript": "~5.5.2",
    "typescript-eslint": "8.10.0"
  },
  "peerDependencies": {
    "@angular/animations": "^18.2.13",
    "@angular/common": "^18.2.13",
    "@angular/compiler": "^18.2.13",
    "@angular/core": "^18.2.13",
    "@angular/forms": "^18.2.13",
    "@angular/platform-browser": "^18.2.13",
    "@angular/platform-browser-dynamic": "^18.2.13",
    "@angular/router": "^18.2.13",
    "@decaf-ts/cli": "latest",
    "@decaf-ts/core": "latest",
    "@decaf-ts/db-decorators": "latest",
    "@decaf-ts/decorator-validation": "latest",
    "@decaf-ts/for-http": "latest",
    "@decaf-ts/reflection": "latest",
    "@decaf-ts/ui-decorators": "latest",
    "@ionic/angular": "^8.4.0",
    "@ionic/angular-toolkit": "^12.1.1",
    "@ngx-translate/core": "^16.0.4",
    "@ngx-translate/http-loader": "^16.0.1",
    "@tabler/icons-webfont": "^3.31.0",
    "ionicons": "^7.4.0",
    "reflect-metadata": "^0.2.1",
    "rxjs": "~7.8.0",
    "zone.js": "~0.14.10",
     "axios": "^1.8.4"
  },
  "schematics": "./schematics/collection.json"
}
